---
// import aboutImg from "@/assets/about-astro.png";
import PageLayout from "@/layouts/Base.astro";
// import { Image } from "astro:assets";

const meta = {
	description: "Home for my personal experiments",
	title: "Projects",
};
const cactusTech: { desc: string; href: string; title: string }[] = [
  {
    desc: "DNS Server in Go from scratch",
    href: "https://github.com/bytemerger/dns-server-go",
    title: "DNS Server",
  },
	{
		desc: "Parse Las files for useful information, it also returns data in csv.",
		href: "https://github.com/bytemerger/las-java",
		title: "LasJava",
	},
	{
		desc: "Web app to manage and book retreats.",
		href: "https://men.retreatschedule.com/",
		title: "Mens Retreat",
	},
	{
		desc: "A tool to create and edit personalized maps; exports to png.",
		href: "https://mapmint.netlify.app/",
		title: "Mint Map",
	},
  {
    desc: "A script to help destroy fly machines of an app in a a particular state",
    href: "https://gist.github.com/bytemerger/1dec3e1588a805d69388f58866ef4510",
    title: "Destroy Fly Machines",
  },
  {
    desc: "Git from scratch",
    href: "http://github.com/bytemerger/my-git",
    title: "Git implementation",
  },
  
  {
    desc: "BitTorrent downloader from scratch using Bun",
    href: "https://github.com/bytemerger/torrentit",
    title: "BitTorrent Downloader",
  },
  {
    desc: "HTTP Server in Go from scratch",
    href: "https://github.com/bytemerger/http-server-go",
    title: "HTTP Server",
  }
];
---

<PageLayout meta={meta}>
	<div class="space-y-6">
		<h1 class="title">Projects</h1>

		<!-- <div class="flex justify-center">
			<Image
				alt="A cartoon cactus looking at the 'Astro.build' logo"
				fetchpriority="high"
				loading="eager"
				src={aboutImg}
			/>
		</div> -->
		<section>
			<dl class="space-y-4">
				{
					cactusTech.map(({ desc, href, title }) => (
						<div class="flex flex-col gap-2 sm:flex-row">
							<dt>
								<span class="flex">
									<a class="cactus-link" href={href} rel="noopener noreferrer" target="_blank">
										{title}
									</a>
									:
								</span>
							</dt>
							<dd>{desc}</dd>
						</div>
					))
				}
			</dl>
		</section>
	</div>
</PageLayout>
